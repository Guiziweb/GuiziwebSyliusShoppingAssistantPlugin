<div class="card mb-3">
    <div class="card-header">
        <div class="card-title">{{ 'guiziweb.ui.messages'|trans }}</div>
    </div>
    <div class="card-body">
        {% set messages = hookable_metadata.context.resource.messages %}
        {% if messages is not null and messages.messages is not empty %}
            <div class="list-group">
                {% for message in messages.messages %}
                    <div class="list-group-item">
                        {% set content = message.content %}

                        {# Badge based on message type #}
                        <div class="mb-2">
                            {% if message.toolCall is defined and message.toolCall is not null %}
                                <span class="badge bg-orange-lt">{{ message.toolCall.name ?? 'Unknown Tool' }}</span>
                            {% elseif message.role.value == 'user' %}
                                <span class="badge bg-blue-lt">{{ 'guiziweb.ui.user'|trans }}</span>
                            {% elseif message.role.value == 'assistant' %}
                                <span class="badge bg-green-lt">{{ 'guiziweb.ui.assistant'|trans }}</span>
                            {% else %}
                                <span class="badge bg-muted-lt">{{ message.role.value }}</span>
                            {% endif %}
                        </div>

                        {# Content #}
                        <div>
                            {% if message.toolCall is defined and message.toolCall is not null %}
                                {{ content }}
                            {% elseif content is iterable and content is not same as('') %}
                                {% for part in content %}
                                    {% if part.text is defined %}
                                        {{ part.text }}
                                    {% else %}
                                        {{ part }}
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                {{ content }}
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">{{ 'guiziweb.ui.no_messages'|trans }}</p>
        {% endif %}
    </div>
</div>
